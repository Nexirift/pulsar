{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"allowJs": true,
		"checkJs": true
	},
	"include": [
		"./**/*.js"
	],
	"exclude": [
		"node_modules",
		"./built",
		"./jspm_packages",
		"./tmp",
		"./temp",
		"./test",
		"./test-federation",
		"./test-server"
	]
}

{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../shared/tsconfig.scripts.jsonc",
	"compilerOptions": {
		"typeRoots": [
			"./node_modules/@types",
			"./node_modules"
		],
		"types": [
			"vite/client",
			"vitest/importMeta",
		]
	},
	"include": [
		"*.js",
		"*.ts",
		"lib/**/*.ts",
		"lib/**/*.js"
	],
	"exclude": [
		"node_modules",
		".storybook/**/*",
		"vue-shims.d.ts"
	]
}

{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../tsconfig.vue.json",
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"rootDir": "../",
		"paths": {
			"@/*": ["../src/*"],
			"@@/*": ["../../frontend-shared/*"]
		},
		"typeRoots": [
			"../@types",
			"../node_modules/@types",
			"../node_modules/@vue-macros",
			"../node_modules"
		],
		"types": ["node"]
	},
	"include": [
		"../lib/**/*.ts",
		"../src/**/*.ts",
		"../src/**/*.vue",
		"../@types/**/*.ts",
		"./**/*.ts",
	],
	"exclude": [
		"node_modules",
		"../.storybook/**/*"
	]
}

{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../shared/tsconfig.web.jsonc",
	"compilerOptions": {
		// Output
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"inlineSources": true,
		"removeComments": false,
		"noEmitOnError": false,
		"noEmit": false,
		"composite": true,
		"outDir": "built",
		"rootDir": "src",
		"tsBuildInfoFile": "built/tsconfig.game.json"
	},
	"include": [
		"./src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"built"
	]
}
